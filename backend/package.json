{
  "name": "likafood-backend",
  "version": "1.0.0",
  "description": "Backend API for LikaFood MVP - Food Vendor Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "node test-auth.js",
    "test:dishes": "node test-dishes.js",
    "test:comprehensive": "node comprehensive-test.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "security:check": "npm audit --audit-level moderate",
    "lint": "echo \"Linting not configured yet\"",
    "validate-env": "node -e \"require('dotenv').config(); console.log('Environment variables loaded successfully')\""
  },
  "keywords": [
    "food",
    "vendor",
    "api",
    "express",
    "mongodb"
  ],
  "author": "LikaFood Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "twilio": "^5.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5",
    "mongodb-memory-server": "^9.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "models/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "middleware/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testTimeout": 30000
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
