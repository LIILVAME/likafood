# Variables d'environnement pour Render
# Copiez ce fichier et configurez ces variables dans votre dashboard Render

# Base de donn√©es MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/likafood

# Authentification JWT
JWT_SECRET=votre_jwt_secret_super_securise_minimum_32_caracteres

# Configuration Twilio pour SMS/OTP
TWILIO_ACCOUNT_SID=votre_twilio_account_sid
TWILIO_AUTH_TOKEN=votre_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuration serveur
NODE_ENV=production
PORT=10000

# CORS - URL de votre frontend Vercel
CORS_ORIGIN=https://votre-frontend.vercel.app

# Logging
LOG_LEVEL=info

# Optionnel - Configuration additionnelle
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100